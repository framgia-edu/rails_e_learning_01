<div class="nested-fields question">
  <div class="field">
    <%= f.label :content, t(".content_question"),
      class: "field-label question-label" %>
    <%= f.text_field :content, class: "form-control field-input" %>
  </div>

  <div class="field">
    <%= f.label :multi_correct, t(".multi"), class: "field-label" %>
    <%= f.check_box :multi_correct, {}, "yes", "no" %>
  </div>

  <div id="answers">
    <%= f.fields_for :answers do |answer| %>
      <%= render "answer_fields", f: answer %>
    <% end %>

    <%= link_to_add_association(t(".add_answer"), f, :answers,
      class: "btn btn-primary btn-small") %>
  </div>
  <%= link_to_remove_association t(".remove_question"), f %>
</div>
